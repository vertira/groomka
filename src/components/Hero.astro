import { Image } from 'astro:assets';
---

		<section class="flex flex-col items-center w-full mt-10 font-accent xl:mt-24">
			<div class="hidden xl:flex fixed -left-20 top-1/2 rotate-90">
				<p class="font-bold text-rose-500 uppercase tracking-[6px] text-2xl">
					OBSERWUJ NAS
				</p>
				<a href="https://www.instagram.com/groomkakalisz">
					<Image
						src="/images/instagram.svg"
						alt="instagram logo"
						class="shrink-0 w-12 aspect-[1.09] mx-5"
						width={48}
						height={48}
					/>
				</a>
				<a href="https://www.facebook.com/groomkakalisz">
					<Image
						src="/images/facebook.svg"
						alt="instagram logo"
						class="shrink-0 w-12 aspect-[1.09] mx-5"
						width={48}
						height={48}
					/>
				</a>
			</div>
			<div>
				<h1 class="flex justify-center font-bold text-rose-500 uppercase tracking-[6px]">
					Zadbaj o Swojego Pupila
				</h1>
